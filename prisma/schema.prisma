datasource db {
  provider = "postgresql"  // o "mysql" o "sqlite" seg√∫n tu base
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Producto {
  id          Int      @id @default(autoincrement())
  nombre      String
  descripcion String
  precio      Float
  stock       Int
  categoria   String
  imagen      String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
